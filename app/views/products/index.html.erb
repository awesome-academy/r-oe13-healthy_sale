<% provide :title, t(".base_title") %>
<section>
  <div class="container">
    <div class="row">
      <%= render "layouts/side_bar" %>
      <div class="col-sm-9 padding-right">
        <div class="features_items">
          <h2 class="title text-center"><%= t ".items" %></h2>
          <% @products.each do |product| %>
            <div class="col-sm-4">
              <div class="product-image-wrapper">
                <div class="single-products">
                  <div class="productinfo text-center">
                    <%= image_tag product.images.last.url.to_s, alt: "produt_i:e" if product.images.present? %>
                    <h2><%= t ".type_price" %><%= product.price %></h2>
                    <p><%= product.name %></p>
                    <%= link_to cart_path(product.id), class: "btn btn-default add-to-cart" do %>
                      <i class="fa fa-shopping-cart"></i><%= t ".add_cart" %>
                    <% end %>
                  </div>
                  <div class="product-overlay">
                    <div class="overlay-content">
                      <h2><%= t ".type_price" %><%= product.price %></h2>
                      <p><%= product.name %></p>
                      <%= link_to cart_path(product.id), class: "btn btn-default add-to-cart" do %>
                      <i class="fa fa-shopping-cart"></i><%= t ".add_cart" %>
                    <% end %>
                    </div>
                  </div>
                </div>
                <div class="choose">
                  <ul class="nav nav-pills nav-justified">
                    <li>
                      <%= link_to product_path(product) do %>
                        <i class="fa fa-eye"></i><%= t ".show_detail" %>
                      <% end %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
</section>
