<% provide :title, t(".base_title") %>
<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <div class="left-sidebar">
          <h2><%= t ".cate" %></h2>
          <div class="panel-group category-products" id="accordian">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <%= link_to "#" do %>
                    <span class="badge pull-right">
                      <i class="fa fa-plus"></i>
                    </span>
                    <%= t ".skincare" %>
                  <% end %>
                </h4>
              </div>
              <div class="panel-collapse collapse">
                <div class="panel-body">
                  <ul>
                    <li><%= link_to t(".cleansers"), "#" %></li>
                    <li><%= link_to t(".moisturizer"), "#" %></li>
                    <li><%= link_to t(".serums"), "#" %></li>
                    <li><%= link_to t(".eye"), "#" %></li>
                    <li><%= link_to t(".suncare"), "#" %></li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a href="#"><% t ".cate_miroless" %></a></h4>
              </div>
            </div>
            <div class="brands_products">
              <h2><%= t ".brands" %></h2>
              <div class="brands-name">
                <ul class="nav nav-pills nav-stacked">
                  <li>
                    <%= link_to "#" do %>
                      <span class="pull-right"><%= t ".brand_1_num" %></span>
                      <%= t ".brand_1_value" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "#" do %>
                      <span class="pull-right"><%= t ".brand_1_num" %></span>
                      <%= t ".brand_1_value" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "#" do %>
                      <span class="pull-right"><%= t ".brand_1_num" %></span>
                      <%= t ".brand_1_value" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "#" do %>
                      <span class="pull-right"><%= t ".brand_1_num" %></span>
                      <%= t ".brand_1_value" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "#" do %>
                      <span class="pull-right"><%= t ".brand_1_num" %></span>
                      <%= t ".brand_1_value" %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>  
            <div class="price-range">
              <h2><%= t ".price_range" %></h2>
              <div class="well text-center">
                <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2" ><br />
                <b class="pull-left"><%= t ".from" %></b> <b class="pull-right"><%= t ".to" %></b>
              </div>
            </div>    
            <div class="shipping text-center">
            </div>
          </div>
        </div>  
      </div>
      <div class="col-sm-9 padding-right">
        <div class="product-details">
          <div class="col-sm-5">
            <div class="view-product">
              <%= image_tag @product.images.last.url.to_s, alt: "produt_i:e" %>
            </div>
            <div id="similar-product" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="item active">
                  <% @product.images.each do |img| %>
                    <%= image_tag img.url.to_s, style: "max-width: 100px; max-height: 100px", class: "img-responsive" %>
                  <% end %>
                </div>
                <div class="item">
                  <% @product.images.each do |img| %>
                    <%= image_tag img.url.to_s, style: "max-width: 100px; max-height: 100px", class: "img-responsive" %>
                  <% end %>
                </div>
                <div class="item">
                  <% @product.images.each do |img| %>
                    <%= image_tag img.url.to_s, style: "max-width: 100px; max-height: 100px", class: "img-responsive" %>
                  <% end %>
                </div>
              </div>
              <a class="left item-control" href="#similar-product" data-slide="prev">
                <i class="fa fa-angle-left"></i>
              </a>
              <a class="right item-control" href="#similar-product" data-slide="next">
                <i class="fa fa-angle-right"></i>
              </a>
            </div>
          </div>
          <div class="col-sm-7">
            <div class="product-information">
              <h2><%= @product.name %></h2>
              <div class="row">
                <p><b><%= @product.manufacture %></b></p>
                <p><b><%= @product.net_weight %></b></p>
                <p><b><%= @product.description %></b></p>
                <h2><b><%= @product.price %></b></h2>
                <div class="col-sm-2">
                  <h2><%= t ".quantity" %></h2>
                  <input type="text" value="" />
                </div>
              </div>
              <span>
                <button type="button" class="btn btn-fefault cart">
                    <i class="fa fa-shopping-cart"></i>
                    Add to cart
                </button>
              </span>
              <p><b>Availability:</b> In Stock</p>
              <p><b>Condition:</b> New</p>
              <p><b>Brand:</b> HEATHY-SHOP</p>
              <a href=""><img src="images/product-details/share.png" class="share img-responsive"  alt="" /></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
