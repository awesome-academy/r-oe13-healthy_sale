<% provide :title, t(".products_title") %>
<div class="kenh14-border" id="blog-title" >
  <h1><%= t ".products_title" %></h1>
</div>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <section class="user_info">
          <div class="card-body">
            <h4 class="card-title"><%= link_to product.name,"#" %></h4>
            <h5><%= product.net_weight %></h5>
            <h5><%= product.manufacture %></h5>
            <h5><%= product.price %></h5>
            <h5><%= product.description %></h5>
          </div>
          <div class="card-footer">
            <% if current_user.admin? %>
              <%= link_to (t ".delete"), "#", action: "destroy", method: :delete,  data: {confirm: t(".you_want")}, class: "btn btn-danger", id: "delete-button", remote: true %>
            <% end %>
          </div>
        </section>
      </div>
    <% end %>
  </div>
<%= paginate @products, theme: "twitter-bootstrap-3" %>
