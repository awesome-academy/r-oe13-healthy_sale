<% provide :title, t(".login_title") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="login-form">
        <h2 class="center-parent"><%= t ".login_title" %></h2>
        <%= form_for :session, url: login_path do |f| %>
          <%= f.email_field :email, placeholder: t(".enter_email"), class: "form-control"  %>
          <%= f.password_field :password, placeholder: t(".enter_pass"), class: "form-control" %>
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%= t ".remember_me" %></span>
          <% end %>
          <%= f.submit t(".login_title"), class: "btn btn-primary" %>
        <% end %>
        <p><%= t ".new_user" %><%= link_to t(".sign_up"), signup_path %></p>
      </div>
    </div>
  </div>
</div>
